<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
    <%= f.label :email, for: "floating input" %>
  </div>

  <div class="mb-3 row g-3 align-items-center">
    <div class="col-auto form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "password" %>
      <%= f.label :password, for: "floating input" %>
    </div>
    <div class="col-auto">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "password" %>
    <%= f.label :password_confirmation, for: "floating input" %>
  </div>

  <div class="form-floating">
    <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
